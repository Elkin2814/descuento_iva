using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace git_usos
{
    class Program
    {
        static void Main(string[] args)
        {
            double total_compra, total_pago, descuento;
            Console.WriteLine("INGRESE LA CANTIDAD TOTAL DE SU  COMPRA: ");
            total_compra = Convert.ToInt32(Console.ReadLine());

            descuento = 0.25 * total_compra;
            total_pago = total_compra - descuento;
            Console.Write("EL TOTAL QUE DEBE PAGAR ES: ");
            Console.ReadKey();
        }
    }
}
